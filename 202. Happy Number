class Solution { 
public:
    int getDigiSum(int n) {
        int sum = 0;
        while(n>0) {
            int ld = n%10;
            sum+= ld*ld;
            n/=10;
        }
        return sum;
    }
    bool isHappy(int n) {
        int slow = n;
        int fast = n;
        do {
            slow = getDigiSum(slow);
            fast = getDigiSum(getDigiSum(fast));
        }while(slow!=fast);
        return slow == 1;
    }
};
