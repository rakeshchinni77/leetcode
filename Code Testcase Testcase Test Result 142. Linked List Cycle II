class Solution {
public:
    ListNode *detectCycle(ListNode *head) {
        if(!head || !head->next) return nullptr;
        ListNode* slow = head,*fast = head;
        while(fast && fast->next) {
            slow = slow->next;
            fast = fast->next->next;
            if(slow == fast){
                fast = head;
            while(fast!=slow) {
                slow = slow->next;
                fast = fast->next;
            }
            if(slow == fast) {
                return slow;
            }
            }
        }
        return nullptr;
    }
};
