class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        // kadane's algoritm
        int maxi = INT_MIN;
        int n=nums.size();
        int current_sum=0;
        for(int i=0;i<n;i++) {
            int current_sum = current_sum+nums[i];
            maxi=max(current_sum,maxi);
            if(current_sum < 0) {
                current_sum=0;
            }
        }
        return maxi;
    }
};

