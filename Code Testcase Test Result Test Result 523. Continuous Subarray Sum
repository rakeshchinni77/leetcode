class Solution {
public:
    bool checkSubarraySum(vector<int>& nums, int k) {
        unordered_map<int, int> modMap;
        modMap[0] = -1;
        int sum = 0;

        for (int i = 0; i < nums.size(); ++i) {
            sum += nums[i];
            if (k != 0) sum %= k;

            if (modMap.count(sum)) {
                if (i - modMap[sum] > 1) return true;
            } else {
                modMap[sum] = i;
            }
        }

        return false;
    }
};
