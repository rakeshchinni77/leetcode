class Solution {
public:
    bool isIsomorphic(string s, string t) {
        if(s.size()!=t.size()) return false;
        unordered_map<char,char> charMap;
        unordered_map<char,bool> replaceMap;
        for(int i=0;i<s.size();i++) {
            char original = s[i];
            char replace = t[i];
            if(charMap.find(original) == charMap.end()) {
               if(replaceMap[replace]) return false;
               charMap[original] = replace;
               replaceMap[replace] = true;
            }
            else {
                  if(charMap[original] != replace) {
                    return false;
                  }
            }
        }
        return true;
    }
};
