class Solution {
public:
    int reverseBits(int n) {
        unsigned int result = 0;
        unsigned int x = static_cast<unsigned int>(n);
        for (int i = 0; i < 32; i++) {
            result <<= 1;
            result |= (x & 1);
            x >>= 1;
        }
        return static_cast<int>(result);
    }
};
