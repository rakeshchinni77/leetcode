class Solution {
public:
    int countPartitions(vector<int>& nums) {
        int totsum = 0;
        for(auto it:nums) {
            totsum+=it;
        }
        int n = nums.size();
        int left = 0;
        int right = totsum;
        int part = 0;
        for(int i=0;i<n-1;i++) {
            left += nums[i];
            right -= nums[i];
            int diff = (left-right);
            if(diff%2==0) {
                part++;
            }
        }
        return part;
    }
};
