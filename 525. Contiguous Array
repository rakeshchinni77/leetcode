class Solution {
public:
    int findMaxLength(vector<int>& nums) {
        int n=nums.size();
        unordered_map<int,int>mpp;
        int maxiLen = 0;
        int currsum = 0;
        mpp[0] = -1;
        for(int i=0;i<n;i++) {
            if(nums[i] == 0) {
                currsum+=-1;
            }
            else {
                currsum+=1;
            }
            if(mpp.find(currsum)!=mpp.end()) {
                maxiLen = max(maxiLen,i-mpp[currsum]);
            }
            else {
                mpp[currsum] = i;
            }
        }
        return maxiLen;
    }
};
