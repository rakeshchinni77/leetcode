class Solution {
public:
    int minPairSum(vector<int>& nums) {
        int n = nums.size();
        if(n < 2) return 0;
        sort(nums.begin(),nums.end());
        int maxi = INT_MIN;
        for(int i=0;i<n/2;i++) {
            maxi = max(maxi,nums[i]+nums[n-1-i]);
        }
        return maxi;
    }
};
