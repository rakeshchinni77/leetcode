class Solution {
public:
    ListNode* mergeTwoLists(ListNode* list1, ListNode* list2) {
        //here we created dummy node then we attaching the ans to tail next 
        ListNode dummy(-1);
        ListNode* tail = &dummy;//in tail empty list
        while(list1 && list2) {
            if(list1->val < list2->val) {
                tail->next = list1;
                list1 = list1->next;
            }
            else {
                tail->next = list2;
                list2 = list2->next;
            }
            //if any we need to increase the tail
            tail = tail->next;
        }
        // last one will remain
        if(list1) {
            tail->next = list1;
        }
        else {
            tail->next = list2;
        }
        tail = tail->next;
        return dummy.next;//indirectly the dummy next is ans 
    }
};
