class Solution {
public:
    int numSteps(string s) {
        int carry = 0;
        int cnt =0;
        int n = s.size()-1;
        //here we are travel upto 1 not upto first bit
        for(int i=n;i>0;i--) {
            int bit = (s[i]-'0')+carry;
            if(bit%2==0) {
                cnt++;
            }
            else {
                cnt+=2;
                carry=1;
            }
        }
        if(carry == 1) cnt++;
        return cnt;
    }
};
