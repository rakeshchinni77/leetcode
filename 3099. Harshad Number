class Solution {
public:
    int getDigitSum(int n) {
        int sum=0;
        while(n>0) {
            int ld=n%10;
            sum+=ld;
            n=n/10;
        }
        return sum;
    }
    int sumOfTheDigitsOfHarshadNumber(int x) {
        int digitSum=getDigitSum(x);
        if(x%digitSum==0) {
            return digitSum;
        }
        return -1;
    }
};
