class Solution {
public:
    int lengthOfLastWord(string s) {
        int n = s.size();
        int cnt = 0;
        for(int i=n-1;i>=0;i--) {
            if(!isspace(s[i])) cnt++;
            else if(isspace(s[i]) && cnt!=0) {
                break;
            }
        }
        return cnt;
    }
};
