class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        int n = nums.size();
        int last_small = INT_MIN;
        sort(nums.begin(),nums.end());
        int cnt=0;
        int longest=0;
        for(int i=0;i<n;i++) {
            if(nums[i]-1==last_small) {
               cnt+=1;
               last_small = nums[i];
            }
            else if(nums[i]!=last_small) {
               cnt = 1;
               last_small=nums[i];
            }
            longest = max(longest,cnt);
        }
        return longest;
    }
};
