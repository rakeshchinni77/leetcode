class Solution {
public:
    ListNode* oddEvenList(ListNode* head) {
        if(!head || !head->next) return head;
        ListNode* even = head;
        ListNode* odd = head->next,*oddhead = odd;
        while(odd && odd->next) {
            even->next = odd->next;
            even = even->next;
            odd->next = even->next;
            odd = odd->next;
        }
        even->next = oddhead;
        return head;
    }
};
